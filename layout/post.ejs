<article class="post" itemscope itemtype="http://schema.org/BlogPosting">
  <header>
    <%- partial('_partial/post/title', { post: page, index: false, class_name: 'posttitle' }) %>
    <div class="meta">
      <span class="author" itemprop="author" itemscope itemtype="http://schema.org/Person" style="display:none">
        <span itemprop="name"><% if (page.author) { %><%- page.author %><% } else { %><%- config.title %><% } %></span>
        <span itemprop="url">#page-author</span>
      </span>
      <span class="author">
        <a href="#page-author"><% if (page.author) { %><%- page.author %><% } else { %><%- config.title %><% } %></a>
      </span>
      <%- partial('_partial/post/date', { post: page, class_name: 'postdate' }) %>
      <%- partial('_partial/post/tag') %>
    </div>
  </header>
  <%- partial('_partial/post/gallery') %>
  <div class="content" itemprop="articleBody">
    <%- page.content %>
  </div>
  <a href="https://github.com/ES-Community/ES-Community.github.io/blame/source/source/<%= page.source %>" target="_blank">Blame</a> - 
  <a href="https://github.com/ES-Community/ES-Community.github.io/commits/source/source/<%= page.source %>" target="_blank">History</a>
  <% if (page.author) { %>
    <div id="page-author" style="display:flex; justify-content: center; margin-top: 2em;">
      <%- githubCard({user: page.author}) %>
    </div> 
  <% } %>
</article>
<%- partial('_partial/comments') %>
